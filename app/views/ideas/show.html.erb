<p id="notice"><%= notice %></p>

<p>
  <strong>名前:</strong>
  <%= @idea.name %>
</p>

<p>
  <strong>説明:</strong>
  <%= @idea.description %>
</p>

<p>
  <strong>写真:</strong>
  <%= image_tag(@idea.picture_url, width: 600) if @idea.picture.present? %>
</p>

<h4>コメント</h4>
<% @comments.each do |comment| %>
  <div>
    <strong><%= comment.user_name %></strong>
    <br />
    <p><%= comment.body %></p>
    <p><%= link_to '削除', comment_path(comment), method: :delete, data: { confirm: '削除してもよろしいですか？' } %></p>
  </div>
<% end %>
<%= render 'comments/form', comment: @comment %>

<%= link_to '編集', edit_idea_path(@idea) %> |
<%= link_to '戻る', ideas_path %>
